<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>
<VBox fx:id="rootVBox"
      styleClass="mediaView"
      alignment="CENTER"
      spacing="10"
      xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="hi.verkefni.vidmot.KynningController">

    <MediaView fx:id="fxMediaView"
               styleClass="player"
               fitWidth="600"
               fitHeight="300"
               VBox.vgrow="NEVER"/>

    <HBox spacing="10" alignment="CENTER" styleClass="media-controls">
        <Button onAction="#rewindAction" text="⏪"/>
        <Button onAction="#playPauseAction" text="| |"/>
        <Slider fx:id="fxSlVolume"/>
    </HBox>
</VBox>
